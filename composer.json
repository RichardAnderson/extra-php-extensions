{
    "name": "arzola/extra-php-extensions",
    "description": "A Vito plugin to fetch and make available PHP extensions.",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Oscar Arzola",
            "email": "os@icode.mx"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "post-autoload-dump" : [
            "echo 'Running post-autoload-dump scripts...'",
            "@php artisan cache:clear",
            "@php artisan config:clear",
            "@php artisan view:clear",
            "@php artisan route:clear",
            "@php install.php"
        ],
        "pre-package-uninstall" : [
            "@php uninstall.php"
        ]
    },
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Arzola\\ExtraPhpExtensions\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arzola\\ExtraPhpExtensions\\ExtraPhpExtensionsPluginServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
