{
    "name": "arzola/extra-php-extensions",
    "description": "A Vito plugin to fetch and make available PHP extensions.",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Oscar Arzola",
            "email": "os@icode.mx"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
         "post-package-install": [
           "@php artisan config:clear",
           "@php artisan cache:clear",
           "@php artisan php-extensions:fetch",
           "echo 'PHP extensions installed successfully.'"
         ],
        "post-package-uninstall": [
           "@php artisan config:clear",
           "@php artisan cache:clear",
           "@php artisan php-extensions:uninstall"
         ]
    },
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Arzola\\ExtraPhpExtensions\\": "src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arzola\\ExtraPhpExtensions\\ExtraPhpExtensionsPluginServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
